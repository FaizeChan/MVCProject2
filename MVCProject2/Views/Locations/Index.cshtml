@model IEnumerable<MVCProject2.Models.Location>

@{
    ViewBag.Title = "Forum";
}

<h1>What's Your Dream Vacation</h1>

<p>
    @Html.ActionLink("New Forum", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                    <p>@Html.DisplayNameFor(model => model.Reason) : @Html.DisplayFor(modelItem => item.Reason)</p>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.LocationID }, new { @class = "btn btn-primary", role = "button" })</p>
                    @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
                </div>
            </div>
        </div>
    }
</div>




